<% include ../partials/header%>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center"> Create New Campground</h1>
            <div style="width:30%;margin:30px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" id="formGroupExampleInput" name="name" placeholder="Campground name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="formGroupExampleInput2" name="image" placeholder="Image Url">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="formGroupExampleInput2" name="description" placeholder="Add some description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Add Camp</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>

    </div>
    <%- include ../partials/footer%>